<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_sale_booking_order_form" model="ir.ui.view">
        <field name="name">sale.booking.order.form</field>
        <field name="model">sale.booking.order</field>
        <field name="arch" type="xml">
            <form string="Booking Order">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done,cancel"/>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="btn-primary"/>
                    <button name="action_done" type="object" string="Mark as Done" states="confirmed" class="btn-success"/>
                    <button name="action_cancel" type="object" string="Cancel" states="confirmed" class="btn-danger"/>
                    <button name="set_to_draft" type="object" string="Set to Draft" states="cancel" class="btn-secondary"/>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" colspan="4"/>
                        </h1>
                    </div>
                    <group>
                        <field name="partner_id"/>
                        <field name="order_date"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree view for booking order -->
    <record id="view_sale_booking_order_tree" model="ir.ui.view">
        <field name="name">sale.booking.order.tree</field>
        <field name="model">sale.booking.order</field>
        <field name="arch" type="xml">
            <tree string="Booking Orders" decoration-bf="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="order_date"/>
                <field name="state" decoration-danger="state == 'cancel'"
                      decoration-muted="state == 'draft'"
                      decoration-success="state == 'done'"
                      decoration-info="state == 'confirmed'"
                      widget="badge"/>
            </tree>
        </field>
    </record>

<!--    search View-->
    <record id="view_sale_booking_order_search" model="ir.ui.view">
        <field name="name">sale.booking.order.search</field>
        <field name="model">sale.booking.order</field>
        <field name="arch" type="xml">
            <search string="Search Booking Orders">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="order_date"/>
                <filter name="current_orders" string="Current Orders" domain="[('order_date', '>=', context_today())]"/>
            </search>
        </field>
    </record>

    <!-- Action for booking order -->
    <record id="action_booking_order" model="ir.actions.act_window">
        <field name="name">Booking Orders</field>
        <field name="res_model">sale.booking.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>


</odoo>
